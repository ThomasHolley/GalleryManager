</tr>
<?php foreach ($photos as $photo) : ?>
    <tr>
        <td><?= $this->escapeHtml($photo->getTitle()) ?></td>
        <td><?= substr($this->escapeHtml($photo->getDescription()), 0, 15).(strlen($photo->getDescription()) > 15 ? "..." : "") ?></td>
        <td><?= $this->escapeHtml($photo->getPath()) ?></td>
        <td><?= $this->escapeHtml($photo->getUser()->getFullName()) ?></td>
        <td>
            <a href="<?= $this->url('photo', ['action' => 'edit', 'id' => $photo->getId()]) ?>">Edit</a>
            <a href="<?= $this->url('photo', ['action' => 'delete', 'id' => $photo->getId()]) ?>">Delete</a>
        </td>
    </tr>
