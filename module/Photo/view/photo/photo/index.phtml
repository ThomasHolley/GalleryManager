$title = 'Mes photos';
$this->headTitle($title);
?>
<h1><?= $this->escapeHtml($title) ?></h1>
<p>
    <a href="<?= $this->url('photo', ['action' => 'add']) ?>">Ajouter une photo</a>
</p>

<table class="table">
<tr>
    <th>Titre</th>
    <th>Description</th>
    <th>Chemin</th>
